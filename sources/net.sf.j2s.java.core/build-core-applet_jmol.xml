<project name="JSmol" default="toJs-jmol" basedir=".">
 
	   <property name="site.dir" value="site_jmol" />
       <property name="site.path" value="site_jmol/jsmol" />
       <property name="site-resource.dir" value="site-resources_4.2" />  	  	

  <target name="toJs-jmol" id="toJs-jmol">
 		
	  	
	  	<!-- non-Java resources to copy to site/ -->
	
		<echo> Copying ${site-resource.dir} files into ${site.dir} </echo>
		<copy todir="${site.dir}">
	  		<fileset dir="${site-resource.dir}" erroronmissingdir="false" >
	  			<include name="**/*"/>
			</fileset>
		</copy>
	  		

	  	
   	<!-- make core files -->
 
   	<echo>creating and compressing core files - warnings are OK; "does not exist" is trouble</echo>

   	<echo>creating dist/Jmol-j2s-site.zip </echo>
   	<zip destfile="dist/Jmol-j2s-site.zip" basedir="site_jmol" >
   		<exclude name="jsmol/j2s/test/**"/>
   		<exclude name="*.html"/>
   	</zip>
   	
  </target>
	
</project>
